/**
 * Variables
 */

blue = #2196f3
orange = #ffab40
light-grey = #eee
dark-grey = rgba(0, 0, 0, 0.54)

html,
body
  height: 100%;

/**
 * Defaults CSS
 */
html,
body,
input,
textarea,
button
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.004);

/**
 * Header CSS
 */
header
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  z-index: 2;


header ul.mui-list--inline
  margin-bottom: 0;

header a
  color: white;

header a:hover
  color: white;

/**
 * Content CSS
 */
#content-wrapper
  min-height: 100%;
  margin-bottom: -80px;
  padding-bottom: 80px;
  background-color: light-grey;


/**
 * Footer CSS
 */
footer
  height: 80px;
  background-color: white;
  border-top: 1px solid dark-grey;
  padding-top: 15px;

/**
 * Typography
 */
.color-text-blue
  color: blue

.img-circle
  border-radius: 50%;


.text-capitalize
  text-transform: capitalize;
.text-uppercase
  text-transform: uppercase;

.mui-panel
  position: relative;
  z-index 1;

.material-icons.md-18 { font-size: 18px; }
.material-icons.md-21 { font-size: 18px; }
.material-icons.md-24 { font-size: 24px; }
.material-icons.md-36 { font-size: 36px; }
.material-icons.md-48 { font-size: 48px; }

icon-box(background-off=black, background-on=light-grey, text-color-off=dark-grey, text-color-on=black)
    background-color: background-off;
    width: 26px;
    height: 26px;
    color: text-color-off;
    &:hover
      background: background-on
      color: text-color-on
    a,i
      padding: 3px;
      display:block;
      color: text-color-off;
      text-decoration:none;
      cursor:pointer
      &:hover
        color: text-color-on

icon-circle(background-off=black, background-on=light-grey, text-color-off=dark-grey, text-color-on=black)
  icon-box(background-off, background-on, text-color-off, text-color-on)
  border-radius: 50%;

.icon-inline
  display: inline-block;


#modal
  display: 'block';
  position: relative;
  margin-top: 76px;
  padding: 0px;
  &.full-modal
    width: 100%;
    height: 100%;
    margin: 0;
  .close-icon
    position: absolute;
    z-index:10;
    top: 10px;
    right: 20px;
    cursor: pointer;
    &:hover
      color: red

.mui-textfield
  position: relative;
  .error-reason
    postion: absolute;
    bottom: -5px;
    left: 0px;
    z-index: 99999;

@import "front-page.styl"
@import "manager.styl"
@import "user.styl"
